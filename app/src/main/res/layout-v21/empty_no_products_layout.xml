<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_no_products_found"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/gifImageView2"
        android:layout_width="@dimen/dimen200dp"
        android:layout_height="@dimen/dimen200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/no_products_found" />


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gifImageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="There is nothing in your bag. Lets add some items.."
        android:textColor="@color/gray"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/btn_go_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
        android:elevation="1.5dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Go Back"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view"
        android:layout_margin="@dimen/dimen10dp"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_below="@+id/btn_go_back"
        android:background="@color/gray" />

</RelativeLayout>