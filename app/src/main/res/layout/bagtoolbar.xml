<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/bottomnavigation"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    local:titleTextAppearance="@style/AppTheme.Toolbar.Title"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="@dimen/dimen5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/robotomedium"
            android:text="SHOPPING BAG"
            android:gravity="center">



        </TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/round_grey_corners"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_gravity="center"
                android:id="@+id/withoutblak"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/wishlist"
                android:backgroundTint="@color/black" />

            <TextView
                android:layout_marginLeft="@dimen/dimen20dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/dimen18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/robotomedium"
                android:text="WISHLIST"
                android:gravity="center">



            </TextView>
        </LinearLayout>



    </LinearLayout>


</androidx.appcompat.widget.Toolbar>




