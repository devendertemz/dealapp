<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NestedScrollBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >


            <TextView
                android:layout_marginTop="@dimen/dimen10dp"
                android:id="@+id/tv_header_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:text="Test"
                android:textStyle="bold"
                app:itemTextColor="@color/black"
                android:textSize="@dimen/dimen20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_semibold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center|left"
                    android:text="9895989695 "
                    android:textStyle="normal"
                    app:itemTextColor="@color/black"
                    android:textSize="@dimen/dimen15dp"
                    android:textColor="@color/black"
                    android:drawableTint="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="18dp"
                    android:gravity="center|left"
                    android:text="Test@gmail.com"
                    app:itemTextColor="@color/black"
                    android:textSize="@dimen/dimen15dp"
                    android:textColor="@color/black"
                    android:drawableTint="@color/black"
                    />
            </LinearLayout>


            <!--  <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="center"
                  android:layout_marginRight="8dp"
                  android:layout_weight="1"
                  android:gravity="center">

                  <ImageView
                      android:id="@+id/Save"
                      android:layout_width="35dp"
                      android:layout_height="35dp"
                      android:layout_marginBottom="@dimen/space_2"
                      android:background="@drawable/ic_navigate_next_white_24dp" />

              </LinearLayout>
  -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimen70dp"
            android:paddingTop="10dp">




            <View
                style="@style/MenuItemUnderline"/>


            <LinearLayout
                android:id="@+id/ll_Orders"
                style="@style/MenuItemParent"
                android:background="?selectableItemBackground">


                <ImageView
                    style="@style/MenuItemImage"
                    app:srcCompat="@drawable/ic_order"
                    tools:ignore="VectorDrawableCompat" />
                <LinearLayout
                    android:layout_marginRight="@dimen/dimen10dp"

                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="My Orders"
                        android:minHeight="@dimen/dimen10dp"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Check your order status"
                        android:textSize="@dimen/dimen10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <ImageView
                    style="@style/MenuItemArrow"
                    app:srcCompat="@drawable/ic_right_arrow"
                    android:layout_marginLeft="115dp"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <View
                style="@style/MenuItemUnderline"/>

            <LinearLayout

                android:id="@+id/ll_Notifications"

                style="@style/MenuItemParent"
                android:background="?selectableItemBackground">

                <ImageView
                    style="@style/MenuItemImage"
                    app:srcCompat="@drawable/ic_notifications_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_marginRight="@dimen/dimen10dp"

                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Notifications"
                        android:minHeight="@dimen/dimen10dp"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Check your new notifications"
                        android:textSize="@dimen/dimen10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <ImageView
                    style="@style/MenuItemArrow"
                    android:layout_marginLeft="95dp"
                    app:srcCompat="@drawable/ic_right_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <View
                style="@style/MenuItemUnderline"/>

            <LinearLayout
                android:id="@+id/ll_profile"
                style="@style/MenuItemParent"
                android:background="?selectableItemBackground">

                <ImageView
                    style="@style/MenuItemImage"
                    app:srcCompat="@drawable/ic_nav_profile"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_marginRight="@dimen/dimen10dp"

                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Profile Settings"
                        android:minHeight="@dimen/dimen10dp"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Edit your profile"
                        android:textSize="@dimen/dimen10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <ImageView
                    style="@style/MenuItemArrow"
                    android:layout_marginLeft="105dp"
                    app:srcCompat="@drawable/ic_right_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <View
                style="@style/MenuItemUnderline"/>

            <LinearLayout
                android:id="@+id/ll_Contact_Us"

                style="@style/MenuItemParent"
                android:background="?selectableItemBackground">

                <ImageView
                    style="@style/MenuItemImage"
                    app:srcCompat="@drawable/ic_order"
                    tools:ignore="VectorDrawableCompat" />
                <LinearLayout
                    android:layout_marginRight="@dimen/dimen10dp"

                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Help Center"
                        android:minHeight="@dimen/dimen10dp"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Help Center"
                        android:textSize="@dimen/dimen10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <ImageView
                    style="@style/MenuItemArrow"
                    android:layout_marginLeft="135dp"
                    app:srcCompat="@drawable/ic_right_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <View
                style="@style/MenuItemUnderline"/>

            <LinearLayout
                android:id="@+id/ll_Support"
                style="@style/MenuItemParent"
                android:background="?selectableItemBackground">

                <ImageView
                    style="@style/MenuItemImage"
                    app:srcCompat="@drawable/ic_order"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_marginRight="@dimen/dimen10dp"

                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Share Feedback"
                        android:minHeight="@dimen/dimen10dp"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Share Feedback"
                        android:textSize="@dimen/dimen10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <ImageView
                    style="@style/MenuItemArrow"
                    android:layout_marginLeft="100dp"
                    app:srcCompat="@drawable/ic_right_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <View
                style="@style/MenuItemUnderline"/>
            <LinearLayout
                android:id="@+id/buttonLogin"

                style="@style/MenuItemParent"
                android:background="?selectableItemBackground">

                <ImageView
                    style="@style/MenuItemImage"
                    app:srcCompat="@drawable/ic_exit"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_marginRight="@dimen/dimen10dp"

                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Logout"
                        android:minHeight="@dimen/dimen10dp"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"                        android:layout_width="match_parent"
                        android:text="Logout"
                        android:textSize="@dimen/dimen10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <ImageView

                    style="@style/MenuItemArrow"
                    android:layout_marginLeft="170dp"
                    app:srcCompat="@drawable/ic_right_arrow"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>


            <View
                style="@style/MenuItemUnderline"/>
















        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
